<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        {{#each movies}}
            <div class="flip flip-vertical">
                <div class="front">
                    <img src="{{imageURL}}" alt="Jungle-Cruise" />
                </div>
                <div class="back">
                    <h1>{{title}}</h1>
                    <h2>Genre: {{genre}}</h2>
                    <p>{{description}}</p>
                    <a href="details/{{_id}}" class="details">Details</a>
                </div>
            </div>
        {{/each}}
    </div>
</section>